<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_names_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/names_header" />

    <TextView
        android:id="@+id/tv_names_info_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/names_info_label" />

    <EditText
        android:id="@+id/et_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="First name"
        android:inputType="text|textCapWords|textPersonName" />

    <TextView
        android:id="@+id/tv_first_name_empty_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_name_empty_error"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/et_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Last name"
        android:inputType="text|textCapCharacters|textPersonName" />

    <TextView
        android:id="@+id/tv_last_name_empty_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/last_name_empty_error"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_next_from_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:enabled="false"
        android:text="@string/next" />
</LinearLayout>